{% extends 'admin/layout_admin.html.twig' %}

{% block title %}Representation{% endblock %}

{% block body %}
    <h1>Representation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ representation.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ representation.date ? representation.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ representation.localisation }}</td>
            </tr>
            <tr>
                <th>MaxPlace</th>
                <td>{{ representation.maxPlace }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('representation_index') }}">back to list</a>

    <a href="{{ path('representation_edit', {'id': representation.id}) }}">edit</a>

    {{ include('admin/representation/_delete_form.html.twig') }}
{% endblock %}
